extends layout

mixin ordinal(n)
  - var s = ["th","st","nd","rd"]
  - var v = n%100
  if n === 1
    span.badge.badge-pill.badge-first.float-right= n+(s[(v-20)%10]||s[v]||s[0])
  else if n === 2
    span.badge.badge-pill.badge-second.float-right= n+(s[(v-20)%10]||s[v]||s[0])
  else if n === 3
    span.badge.badge-pill.badge-third.float-right= n+(s[(v-20)%10]||s[v]||s[0])
  else 
    span.badge.badge-pill.float-right= n+(s[(v-20)%10]||s[v]||s[0])

block content
  .row.banner
    .col-12
      h1= race_name + " "
        a(href='/season')= race_year

  .row
    .col-12.col-md-3
      .card.card-primary.side-bar
        .card-block
          h4 
            a(href=circuit.link)= circuit.name
          p.lap-count= 'Lap Count: ' + circuit.laps
          p.track-record= 'Track Record: ' + circuit.lap_record
      each driver in results
        .card
          .card-block.drivers.side-bar
            h4
              a(href='/driver')= driver.name
              small &nbsp;
              +ordinal(driver.finish)
            p.current-team= driver.team
            .row
              .col-12.col-md-5
                p.start_pos= 'Started: ' + driver.start
                p.qual_pos= 'Qualified: ' + driver.qual
              .col-12.col-md-7
                if fastest_lap === driver.fast_lap
                  p.fastest_lap Fastest:
                    span.badge.badge-pill.badge-first.lap= driver.fast_lap
                else 
                  p.fastest_lap= 'Fastest: ' + driver.fast_lap
                p.pit_stops= 'Pit stops: ' + driver.pits
          

    .col-12.col-md-9
      .card.card-primary
        .card-block
            h2.card-title Position Changes
            table
              tr
                th Lap
                - place = 1
                while place < results.length+1
                  th= place++
              each lap in race_data
                tr
                  td= lap.lap
                  each driver in lap.drivers
                    td= driver.name

      .card.card-primary
        .card-block
          h2.card-title Track Pace
          table
            tr
              th Lap
              each driver in race_data.lap_1.drivers
                th= driver.name
            each lap in race_data
              tr
                td= lap.lap
                each driver in lap.drivers
                  td= driver.lap_time
